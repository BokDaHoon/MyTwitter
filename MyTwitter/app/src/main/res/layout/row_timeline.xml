<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/writer_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/default_user"/>

    <TextView
        android:id="@+id/writer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/writer_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:text="Dahoon"/>

    <TextView
        android:id="@+id/writer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/writer_name"
        android:layout_alignBaseline="@id/writer_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:textSize="13sp"
        android:textColor="#A6A6A6"
        android:text="\@potter7050"/>

    <TextView
        android:id="@+id/tweet_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/writer_profile"
        android:layout_below="@id/writer_id"
        android:autoLink="web"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColorLink="@color/blue"
        android:text="Hello! My name is Dahoon Bok."/>

    <TextView
        android:id="@+id/created_time_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:textColor="#A6A6A6"
        android:text="10:56 AM"/>

    <TextView
        android:id="@+id/created_date_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/created_time_at"
        android:textSize="13sp"
        android:textColor="#A6A6A6"
        android:text="2016.02.11"/>

    <android.support.v7.widget.CardView
        android:id="@+id/twitter_card"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_image"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="70dp"
        android:background="@xml/card_edge"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/og_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/og_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:text="title"/>

            <TextView
                android:id="@+id/og_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="11sp"
                android:textColor="@color/gray"
                android:text="url"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_below="@id/twitter_card"
        android:layout_toRightOf="@id/writer_profile"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tweet_reply"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_reply"/>

        <ImageView
            android:id="@+id/tweet_favorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_favorite"/>

        <TextView
            android:id="@+id/tweet_favorite_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:text="-1"/>

    </LinearLayout>


    <View
        android:id="@+id/content_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:background="#EAEAEA"/>

    <ImageView
        android:id="@+id/tweet_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/writer_profile"
        android:layout_alignLeft="@+id/twitter_card"
        android:layout_alignStart="@+id/twitter_card"/>

</RelativeLayout>